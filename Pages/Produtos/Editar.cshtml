@page
@model RazorCRUD.Pages.Produtos.Editar
@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>


<div class="card">
    <div class="card-header bg-dark">
        <h2 class="text-info">Editar Produto</h2>
    </div>

    <div class="card-body">
        <form method="POST">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

<!-- Se envia o Id como campo oculto-->
     <input type="hidden" asp-for="Producto.Id" />

            <div class="container" style="padding:30px">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Producto.Nome"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Producto.Nome" class="form-control" />
                        </div>
                        <span asp-validation-for="Producto.Nome" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Producto.Descricao"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Producto.Descricao" class="form-control" />
                        </div>
                        <span asp-validation-for="Producto.Descricao" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Producto.Estoque"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Producto.Estoque" class="form-control" />
                        </div>
                        <span asp-validation-for="Producto.Estoque" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Producto.Preco"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Producto.Preco" class="form-control" />
                        </div>
                        <span asp-validation-for="Producto.Preco" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <div class="row">
                        <div class="col-sm-4 offset-sm-2">

                            <input type="submit" value="Editar" class="btn btn-primary form-control"></input>
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Index" class="btn btn-warning form-control">Voltar</a>

                        </div>

                    </div>

                </div>


            </div>
        </form>
    </div>

</div>
